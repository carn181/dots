#!/bin/zsh

alias memusage="ps -axch -o cmd,%mem --sort=-%mem | head"
alias cpusage="ps -axch -o cmd,%cpu --sort=-%mem | head"
alias ls="ls --color=auto"
alias ll="ls -l"
alias la="ls -la"
alias sx="startx ~/.config/X11/xinitrc"
alias w="cd ~/ext/dwn"
alias d="cd ~/ext/Media/Docs"
alias p="cd ~/ext/Media/Pix"
alias v="cd ~/ext/Media/Vids"
alias M="cd ~/ext/Media/Music"
alias b="cd ~/ext/Media/Books"
alias g="cd ~/ext/Media/Games"
alias s="cd ~/ext/School"
alias m="cd ~/ext/Media/meems"
alias c="cd ~/ext/Coding/"
alias wbc="ffplay -left 10 -f v4l2 -fflags nobuffer -flags low_delay -video_size 1280x720 -framerate 60 -i /dev/video0 2&>/dev/null"
alias xi="doas xbps-install"
alias xq="xbps-query"
alias xr="doas xbps-remove"
alias smi="doas make install"
alias mpv="mpv -ao=jack --audio-channels=2"
alias sudo="doas"
alias gc="git clone"
alias cl="sbcl --noinform"
alias dots="git --git-dir=$HOME/git/dots --work-tree=$HOME"
alias netstop="doas rfkill block wlan"
alias netstart="doas rfkill unblock wlan"
alias nheko='QT_QPA_PLATFORMTHEME="" nheko'
